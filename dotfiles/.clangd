CompileFlags:
  Add: [
      -std=c++23,
      -I./include,
      # ── enabled warnings ─────────────────────────────────────────────
      -Wall,
      -Wextra,
      -Wpedantic,
      -Weverything,
      -Wshadow,
      -Wconversion,
      -Wsign-conversion,
      -Wundef,
      -Wmissing-include-dirs,
      -Wfloat-conversion,
      -Wformat=2,
      -Wunreachable-code,
      -Wdouble-promotion,
      # ── disabled compiler notes ──────────────────────────────────────
      -Wno-c++98-compat,
      -Wno-c++98-compat-pedantic,
      -Wno-missing-prototypes,
      -Wno-unused-macros,
    ]
Diagnostics:
  UnusedIncludes: None # turn off "header not used directly"
  ClangTidy:
    FastCheckFilter: "None"
    Remove:
      [
        modernize-use-trailing-return-type,
        modernize-use-designated-initializers,
      ]
