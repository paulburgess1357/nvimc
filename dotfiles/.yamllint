# YAML linting configuration
# Place this in your project root

extends: default

rules:
  line-length:
    max: 140
    level: warning
  
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false
  
  comments:
    min-spaces-from-content: 1
  
  document-start: disable
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']